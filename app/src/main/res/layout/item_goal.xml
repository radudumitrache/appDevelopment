<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/goalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/goalDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/amountSaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/remainingAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining Amount"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnAddRelatedCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Related Cost" />

    <Button
        android:id="@+id/btnDeleteGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Goal" />

    <LinearLayout
        android:id="@+id/relatedCostsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>
