<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.goals.GoalsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitleGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_goals"
                android:textAlignment="center"
                android:textSize="40sp" />

            <!-- Separator -->
            <View
                android:id="@+id/viewSeparator1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

            <!-- Container for Goals -->
            <LinearLayout
                android:id="@+id/goalsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Buttons -->
            <Button
                android:id="@+id/btnCreateGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Create Goal" />

            <Button
                android:id="@+id/btnCalculateImpact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Calculate Impact" />

            <Button
                android:id="@+id/btnCheckViability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Check Viability" />

            <!-- Budget Impact and Prediction -->
            <TextView
                android:id="@+id/budgetImpact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/prediction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />

            <!-- Non-Viable Goals -->
            <TextView
                android:id="@+id/nonViableGoals"
                android:layout_width="wrap_content"
                android:layout_height= "wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
